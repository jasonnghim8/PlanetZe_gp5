<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy">

    <TextView
        android:id="@+id/choose_country"
        android:layout_width="216dp"
        android:layout_height="148dp"
        android:layout_marginTop="117dp"
        android:layout_marginBottom="29dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/country_selection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/country_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="139dp"
        android:text="@string/continued"
        android:background="@drawable/dark_blue_smooth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/country_selection"
        app:rippleColor="@color/blue" />

    <Spinner
        android:id="@+id/country_selection"
        android:layout_width="190dp"
        android:layout_height="72dp"
        android:layout_marginBottom="212dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/country_confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choose_country" />
</androidx.constraintlayout.widget.ConstraintLayout>